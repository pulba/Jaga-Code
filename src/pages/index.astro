import { Image, getImage } from "astro:assets";
import Footer from "../components/footer.astro";
import Cover from "../assets/cover.webp";
import Wa from "../components/wa.astro";
interface Frontmatter {
  title: string;
  slug: string;
  image: string;
}

interface AstroModule {
  frontmatter: Frontmatter;
  default: any; // Komponen Astro
}
const optimizedBackground = await getImage({ src: Cover, format: "webp" });
const landingFiles = import.meta.glob<AstroModule>('./landing/*.astro', { eager: true });
const blogFiles = import.meta.glob<AstroModule>('./blog/*.astro', { eager: true });
const companyFiles = import.meta.glob<AstroModule>('./company/*.astro', { eager: true });
const businessFiles = import.meta.glob<AstroModule>('./business/*.astro', { eager: true });

const getComponents = (files: Record<string, any>) => Object.values(files).map((file) => ({
  title: file.frontmatter.title,
  slug: file.frontmatter.slug,
  image: file.frontmatter.image,
  component: file.default,
}));

const landingComponents = getComponents(landingFiles);
const blogComponents = getComponents(blogFiles);
const companyComponents = getComponents(companyFiles);
const businessComponents = getComponents(businessFiles);


